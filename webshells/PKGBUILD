# Maintainer
pkgname=webshells
pkgver=0.r2.4e96370
pkgrel=1
groups=('projectname' 'projectname-*webapp' 'archassault-backdoor')
pkgdesc="Web Backdoors"
url="https://github.com/ArchAssault-Project/webshells"
arch=('any')
makedepends=('git')
license=('custom')
source=("git+https://github.com/ArchAssault-Project/webshells.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/webshells"
  printf "0.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "$srcdir/webshells"

  # Base directories.
  install -dm755 "$pkgdir/usr/share/webshells"

  cp -a --no-preserve=ownership * "$pkgdir/usr/share/webshells"
}
