# Maintainer
pkgname=sctpscan
pkgver=1.0
pkgrel=1
groups=('projectname' 'projectname-*scanners' 'archassault-reconnaissance')
pkgdesc="A network scanner for discovery and security"
url="http://www.p1sec.com/"
arch=('any')
depends=('glib2')
makedepends=('git')
license=('GPL3')
source=("git+https://github.com/philpraxis/sctpscan.git")
md5sums=('SKIP')

build() {
  cd "$srcdir/sctpscan"
  make
}

package() {
  cd "$srcdir/sctpscan"
  install -Dm755 sctpscan "$pkgdir/usr/bin/sctpscan"
}
